                </span>
            </div>
            <div class="mdl-layout__header-row site-navigation-row mdl-layout--large-screen-only">
                <nav class="mdl-navigation mdl-typography--body-1-force-preferred-font">
                    @Html.ActionLink("Ejercicio1", "Ejer1add", "Ejer1", null, new { Class = "mdl-navigation__link" })
                    @Html.ActionLink("Ejercicio2", "EntradaIndex", "Entrada", null, new { Class = "mdl-navigation__link" })
                    @Html.ActionLink("Ejercicio3", "FiguraIndex", "Figura", null, new { Class = "mdl-navigation__link" })
